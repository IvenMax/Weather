<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/ll_con_hor"
              android:layout_margin="@dimen/value_24_px"
              android:background="@color/funt_text"
              android:orientation="horizontal"
              android:weightSum="4">

    <TextView
        android:id="@+id/tv_hour_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value_20_px"
        android:layout_weight="1"
        android:gravity="center"
        android:text="时间 : 12:00"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_hour_temp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value_20_px"
        android:layout_weight="1"
        android:gravity="center"
        android:text="温度 : 12℃"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_hour_wind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value_20_px"
        android:layout_weight="1"
        android:gravity="center"
        android:text="大风"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_hour_wind_dir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value_20_px"
        android:layout_weight="1"
        android:gravity="center"
        android:text="大风"
        android:textColor="@color/white"/>
</LinearLayout>