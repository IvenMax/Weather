<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_dialog_circle_bg"
              android:orientation="vertical"
              android:paddingTop="@dimen/value_60_px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/value_50_px"
        android:paddingRight="@dimen/value_50_px">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_ok"
                android:layout_width="@dimen/value_40_px"
                android:layout_height="@dimen/value_40_px"
                android:layout_marginRight="@dimen/value_10_px"
                android:layout_marginTop="@dimen/value_4_px"
                android:background="@mipmap/tip_ok"/>

            <TextView
                style="@style/textViewNoPadding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/iv_ok"
                android:text="标题！"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/dialog_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48px"
            android:text="content"
            android:textColor="@color/funt_text"
            android:textSize="10sp"/>

        <EditText
            android:id="@+id/dialog_et_alias"
            style="@style/gray_text_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/value_20_px"
            android:background="@drawable/edit_bg"
            android:hint="hint..."
            android:padding="@dimen/value_20_px"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value_20_px"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_1_px"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:orientation="horizontal">

            <!-- 左侧确定按钮 -->
            <TextView
                android:id="@+id/dialog_tv_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/funt_blue"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/dialog_textView_segment"
                android:layout_width="@dimen/value_1_px"
                android:layout_height="match_parent"
                android:background="@color/bottom_select_no"/>
            <!-- 右侧取消按钮 -->
            <TextView
                android:id="@+id/dialog_tv_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/funt_blue"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>